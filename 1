from PyQt4 import QtGui
from signup import Ui_Dialog1
from signuppage import Ui_Dialog2

class Dialog1(QtGui.QWidget, Ui_Dialog1):
    def __init__(self, parent=None):
        QtGui.QWidget.__init__(self, parent)
        self.setupUi(self)
        self.pushButton_2.clicked.connect(self.handleButton)
        self.window2 = None

    def handleButton(self):
        if self.window2 is None:
            self.window2 = Dialog2(self)
        self.window.close()
        self.window2.show()
        

class Dialog2(QtGui.QWidget, Ui_Dialog2):
    def __init__(self, parent=None):
        QtGui.QWidget.__init__(self, parent)
        self.setupUi(self)

if __name__ == '__main__':

    import sys
    app = QtGui.QApplication(sys.argv)
    window = Dialog1()
    window.show()
    sys.exit(app.exec_())
